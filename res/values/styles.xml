<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.Transparent" parent="android:Theme.Translucent.NoTitleBar">
		<item name="android:backgroundDimEnabled">true</item>
	</style>
	<style name="rootLayout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>
	
	<style name="base">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<!-- main layout -->
	<style name="mainLayout" parent="base">
		<item name="android:background">@drawable/main_background</item>
		<item name="android:orientation">vertical</item>
		<item name="android:layout_marginTop">50dp</item>
		<item name="android:layout_marginRight">20dp</item>
		<item name="android:layout_marginBottom">50dp</item>
		<item name="android:layout_marginLeft">20dp</item>
	</style>
	
	<!-- title -->
	<style name="titleLayout" parent="base">
		<item name="android:gravity">center</item>
		<item name="android:orientation">horizontal</item>
	</style>
	
	<style name="title">
		<item name="android:text">twee</item>
		<item name="android:textSize">30sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="titlePlus" parent="title">
	    <item name="android:text">+</item>
	    <item name="android:textColor">#FFFFFFFF</item>
		<item name="android:textSize">40sp</item>
	</style>
	
	<!-- content -->
	<style name="textLayout" parent="base">
		<item name="android:orientation">vertical</item>
	</style>
	
	<style name="text" parent="base"></style>
	
	<style name="buttonLayout" parent="base">
		<item name="android:paddingTop">15sp</item>
	</style>
</resources>